@model HMSApp.Models.Appointment
@{
    ViewData["Title"] = "Booking Confirmation";
    Layout = "_Layout";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded-circle bg-success" style="width:110px;height:110px;box-shadow:0 8px 25px -6px rgba(16,185,129,.55);">
                    <i class="bi bi-check-lg text-white" style="font-size:3.2rem;"></i>
                </div>
                <h2 class="fw-bold">Your details have been processed</h2>
                <p class="text-muted mb-4">Appointment request submitted successfully. We will notify you if there are any updates.</p>
            </div>
            @if (Model != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white fw-semibold">Summary</div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-5">Patient</dt>
                            <dd class="col-7">@Model.PatientName</dd>
                            <dt class="col-5">Doctor</dt>
                            <dd class="col-7">@Model.DoctorName (@Model.DoctorId)</dd>
                            <dt class="col-5">Date</dt>
                            <dd class="col-7">@Model.AppointmentDate.ToString("yyyy-MM-dd")</dd>
                            <dt class="col-5">Time Slot</dt>
                            <dd class="col-7">@Model.TimeSlot</dd>
                            <dt class="col-5">Status</dt>
                            <dd class="col-7"><span class="badge bg-warning text-dark">@Model.Status</span></dd>
                            @if (!string.IsNullOrWhiteSpace(Model.Symptoms))
                            {
                                <dt class="col-5">Symptoms</dt>
                                <dd class="col-7">@Model.Symptoms</dd>
                            }
                        </dl>
                    </div>
                </div>
            }
            <div class="d-flex gap-2 justify-content-center">
                <a asp-action="Dashboard" class="btn btn-primary"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a>
                <a asp-action="BookAppointment" class="btn btn-outline-primary"><i class="bi bi-plus-circle me-1"></i>Book Another</a>
            </div>
        </div>
    </div>
</div>
