
@model HMSApp.Models.Patient
@{
    ViewData["Title"] = "Patient Details";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Patient Details</h2>
    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Medical History:</strong> @Model.MedicalHistory</p>
            <a class="btn btn-secondary" href="/Patient/Index">Back to List</a>
        </div>
    </div>
</div>
