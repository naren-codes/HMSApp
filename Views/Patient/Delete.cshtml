
@model HMSApp.Models.Patient
@{
    ViewData["Title"] = "Delete Patient";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Delete Patient</h2>
    <div class="alert alert-danger mt-3">
        Are you sure you want to delete this patient?
    </div>
    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Medical History:</strong> @Model.MedicalHistory</p>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PatientId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>

</div>
