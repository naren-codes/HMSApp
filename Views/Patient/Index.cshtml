@model IEnumerable<HMSApp.Models.Patient>
@{
    ViewData["Title"] = "Patient List";
}

@* Including Bootstrap Icons for a richer UI *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary m-0"><i class="bi bi-person-lines-fill me-2"></i>Patients</h2>
        <a asp-action="BookAppointment" asp-controller="Patient" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Book A New Appointment</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3 g-2">
                <div class="col-md-4 col-sm-6">
                    <input id="patientSearch" type="text" class="form-control" placeholder="Search by name / contact..." />
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle me-1"></i>No patients found. Please add a new patient to get started.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="patientTable">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Contact</th>
                                <th>Prescription</th>
                                <th style="width:220px" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var patient in Model)
                            {
                                <tr>
                                    <td>@(patient.Name ?? "Not Provided")</td>
                                    <td>@patient.DateOfBirth.ToShortDateString()</td>
                                    <td>@patient.Gender</td>
                                    <td>@patient.ContactNumber</td>
                                    <td>
                                        <button type="button" class="btn btn-outline-info btn-sm prescription-view-btn" data-patient-id="@patient.PatientId">View</button>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-outline-secondary">Details</a>
                                            <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-outline-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    <div class="mt-4 text-center">
        <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back</a>
    </div>
</div>

<!-- Prescription Modal -->
<div class="modal fade" id="prescriptionModal" tabindex="-1" aria-labelledby="prescriptionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-info text-white">
        <h5 class="modal-title" id="prescriptionModalLabel"><i class="bi bi-journal-medical me-2"></i>Prescription Details</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <dl class="row mb-0">
          <dt class="col-sm-4">Patient Name</dt>
          <dd class="col-sm-8" id="pm-patientName">-</dd>

          <dt class="col-sm-4">Appointment Date</dt>
          <dd class="col-sm-8" id="pm-appointmentDate">-</dd>

          <dt class="col-sm-4">Prescription</dt>
          <dd class="col-sm-8" id="pm-prescription">-</dd>
        </dl>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(function(){
            // Live search functionality
            $('#patientSearch').on('input', function(){
                var searchTerm = $(this).val().toString().toLowerCase();
                $('#patientTable tbody tr').each(function(){
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.indexOf(searchTerm) > -1);
                });
            });

            var prescriptionModal = new bootstrap.Modal(document.getElementById('prescriptionModal'));

            $('.prescription-view-btn').on('click', function(){
                var patientId = $(this).data('patient-id');
                if (!patientId) return;
                $.getJSON('/Patient/GetLatestAppointment', { patientId: patientId })
                    .done(function(data){
                        $('#pm-patientName').text(data.patientName || '-');
                        $('#pm-appointmentDate').text(data.appointmentDate || '-');
                        $('#pm-prescription').text(data.prescription ? data.prescription : 'No prescription available');
                        prescriptionModal.show();
                    })
                    .fail(function(xhr){
                        if (xhr.status === 404) {
                            $('#pm-patientName').text('-');
                            $('#pm-appointmentDate').text('-');
                            $('#pm-prescription').text('No appointments found.');
                            prescriptionModal.show();
                        } else {
                            alert('Failed to load prescription.');
                        }
                    });
            });

            var errorMessage = '@(TempData["ErrorMessage"])';
            if (errorMessage) {
                alert(errorMessage);
            }
            var successMessage = '@(TempData["SuccessMessage"])';
            if (successMessage) {
                alert(successMessage);
            }
        });
    </script>
}
