@model HMSApp.Models.Patient
@{
    ViewData["Title"] = "Login or Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div id="loginPanel" class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Patient Login</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                    <form asp-action="LoginPatient" method="post">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input name="username" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" type="password" class="form-control" required />
                        </div>
                        @* <form asp-action="LoginPatient" method="post">
                            <div class="d-flex justify-content-between mt-3">
                                <button type="submit" class="btn btn-primary">Login</button>
                                <a asp-controller="Account" asp-action="PatientRegister" class="btn btn-secondary">Register</a>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="text-danger mt-2">@ViewBag.Error</div>
                            }
                        </form> *@
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">SignIn</button>
                            <a asp-action="PatientRegister" class="btn btn-secondary ms-2">Register</a>
                        </div>
                       </form>
                       
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#showRegisterBtn').on('click', function(e) {
                e.preventDefault();
                $('#loginPanel').hide();
                $('#registerPanel').show();
            });

            $('#showLoginBtn').on('click', function(e) {
                e.preventDefault();
                $('#loginPanel').show();
                $('#registerPanel').hide();
            });
        });
    </script>
}