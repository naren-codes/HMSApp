@* Views/Account/AdminLogin.cshtml *@
@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout";
}

@if (ViewBag.Success != null && ViewBag.Success)
{
    <div id="success-toast" class="toast-notification">
        <i class="bi bi-check-circle-fill me-3"></i>
        <span><strong>Login Successful!</strong> Redirecting to the admin panel...</span>
    </div>
}
<div id="particles-container" aria-hidden="true"></div>

<div class="floating-shapes" aria-hidden="true">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
    <div class="shape shape-4"></div>
    <div class="shape shape-5"></div>
</div>

<section class="hero-section text-white" style="min-height: 100vh; position: relative;">
    <div class="hero-background-animation"></div>
    <div class="glass-overlay"></div>

    <div class="login-container">
        <div class="glass-card p-4 p-md-5 text-center">
            <div class="mb-4">
                <div class="portal-icon admin-gradient mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-sliders"></i>
                    <div class="icon-ripple"></div>
                </div>
                <h2 class="gradient-text mb-2" style="font-size: 2.5rem;">Admin Portal</h2>
                <p class="text-light opacity-75">System administration and management</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger glass-card mb-4" style="background: rgba(231, 76, 60, 0.15); border: 1px solid rgba(231, 76, 60, 0.3); color: #fff;">
                    <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Error
                </div>
            }

            <form asp-action="LoginAdmin" asp-controller="Account" method="post" class="text-start">
                <div class="mb-3">
                    <label for="username" class="form-label text-light">Username</label>
                    <input type="text" class="form-control glass-input" id="username" name="username" required>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label text-light">Password</label>
                    <input type="password" class="form-control glass-input" id="password" name="password" required>
                </div>

                <div class="d-grid gap-3">
                    <button type="submit" class="btn btn-portal-admin btn-lg hover-lift">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Sign In
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            // Add reveal animation to form
            $('.glass-card').addClass('text-reveal reveal-in');

            // --- NEW: SUCCESS TOAST SCRIPT ---
            const $successToast = $('#success-toast');
            if ($successToast.length) {
                // Show the toast with an animation
                setTimeout(function() {
                    $successToast.addClass('show');
                }, 100);

                // Redirect after a short delay to the ADMIN'S dashboard
                setTimeout(function () {
                    window.location.href = '@Url.Action("Index", "Admin")';
                }, 1000); // Redirect after 2.5 seconds
            }
            // --- END NEW SCRIPT ---
        });
    </script>
}

<style>
    /* Add this new button style to your site's CSS */
    .btn-portal-admin {
        background: linear-gradient(45deg, #e74c3c, #c0392b);
        border: none;
        color: white;
    }

    .admin-gradient {
        background: linear-gradient(45deg, #e74c3c, #c0392b);
    }

    .login-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90%;
        max-width: 520px;
    }

    .glass-input {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* --- NEW: SUCCESS TOAST STYLES --- */
    .toast-notification {
        position: fixed;
        top: 25px;
        left: 50%;
        transform: translate(-50%, -150%);
        background-color: #27ae60;
        color: white;
        padding: 14px 24px;
        border-radius: 50px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.25);
        display: flex;
        align-items: center;
        font-size: 1.1rem;
        z-index: 2000;
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .toast-notification i {
            font-size: 1.5rem;
        }

        .toast-notification.show {
            transform: translate(-50%, 0);
        }
    /* --- END NEW STYLES --- */
</style>