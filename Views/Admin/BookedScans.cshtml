@model IEnumerable<HMSApp.Models.Scan>

@{
    ViewData["Title"] = "Scan List";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold">Scan List</h1>
    <div class="card shadow">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="bg-dark text-white">
                    <tr>
                        <th scope="col">Patient Name</th>
                        <th scope="col">Appointment Date</th>
                        <th scope="col">Lab Name</th>
                        <th scope="col">Scan Type</th>
                        <th scope="col">File</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.PatientName ?? "")</td>
                            <td>@item.AppointmentDate.ToString("dd MMM yyyy")</td>
                            <td>@(item.LabName ?? "")</td>
                            <td>@(item.ScanType ?? "")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.FileName))
                                {
                                    <a href="~/uploads/@item.FileName" target="_blank" class="btn btn-info btn-sm">
                                        View
                                    </a>
                                }
                                else
                                {
                                    <span>No File</span>
                                }
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.FileName))
                                {
                                    <a asp-controller="Admin" asp-action="Accept" asp-route-id="@item.Id" class="btn btn-success btn-sm me-2">
                                        Accept
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Admin" asp-action="Accept" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                                        Re-upload
                                    </a>
                                }
                                <form asp-controller="Admin" asp-action="Reject" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to reject this appointment?');">
                                        Reject
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>