@model HMSApp.Models.Scan

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container my-5">
    <div class="card shadow p-4">
        <div class="card-body text-center">
            <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
            <h1 class="card-title mb-4 fw-bold">Appointment Accepted!</h1>
            <p class="card-text fs-5">Here are the details for the confirmed appointment:</p>

            <div class="text-start mt-4">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Patient Name:</strong> @Model.PatientName</p>
                <p><strong>Appointment Date:</strong> @Model.AppointmentDate.ToShortDateString()</p>
                <p><strong>Lab Name:</strong> @Model.LabName</p>
                <p><strong>Scan Type:</strong> @Model.ScanType</p>

                <hr class="my-4">
                <h5 class="fw-bold">Upload Scan Document</h5>

                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="input-group">
                        <input type="file"
                               name="scanFile"
                               class="form-control"
                               id="scanFileInput"
                               accept=".pdf,.png,.jpeg,.jpg" />
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </form>
                <div class="mt-4">
                    <a asp-action="BookedScans" class="btn btn-secondary">Back to Scan List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Wait for the page to be fully loaded
        document.addEventListener('DOMContentLoaded', function () {
            const fileInput = document.getElementById('scanFileInput');
            fileInput.addEventListener('change', function () {
                const file = this.files[0];
                if (file) {
                    const fileName = file.name;
                    const fileExtension = fileName.split('.').pop().toLowerCase();
                    const allowedExtensions = ['pdf', 'png', 'jpeg', 'jpg'];
                    if (!allowedExtensions.includes(fileExtension)) {
                        alert('You can\'t upload a .' + fileExtension + ' file.\n\nPlease upload only PNG, JPEG, JPG, or PDF files.');
                        this.value = '';
                    }
                }
            });
        });
    </script>
}