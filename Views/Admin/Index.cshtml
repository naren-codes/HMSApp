@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary fw-bold">Admin Dashboard</h1>
    <p class="text-center text-muted mb-5">Select a module to get started</p>

    <div class="row g-4 justify-content-center">

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-lg border-primary">
                <div class="card-body text-center p-4">
                    <i class="bi bi-heart-pulse-fill text-primary display-4 mb-3"></i>
                    <h5 class="card-title fw-bold mb-2">Doctor Management</h5>
                    <p class="card-text text-muted mb-4">
                        View, add, and manage doctor details and their schedules.
                    </p>
                    <a href="@Url.Action("Index", "Doctor")" class="btn btn-primary btn-lg card-link-btn">
                        <i class="bi bi-arrow-right-circle me-2"></i>Go to Doctors
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-lg border-success">
                <div class="card-body text-center p-4">
                    <i class="bi bi-person-lines-fill text-success display-4 mb-3"></i>
                    <h5 class="card-title fw-bold mb-2">Patient Management</h5>
                    <p class="card-text text-muted mb-4">
                        Access detailed patient records and their complete medical history.
                    </p>
                    <a href="@Url.Action("Index", "Patient")" class="btn btn-success btn-lg card-link-btn">
                        <i class="bi bi-arrow-right-circle me-2"></i>Go to Patients
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-lg border-info">
                <div class="card-body text-center p-4">
                    <i class="bi bi-calendar-check-fill text-info display-4 mb-3"></i>
                    <h5 class="card-title fw-bold mb-2">Scan Management</h5>
                    <p class="card-text text-muted mb-4">
                        View, and manage all booked CT, MRI, and X-ray scans.
                    </p>
                    <a href="@Url.Action("BookedScans", "Admin")" class="btn btn-info btn-lg card-link-btn">
                        <i class="bi bi-arrow-right-circle me-2"></i>Go to Scans
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>