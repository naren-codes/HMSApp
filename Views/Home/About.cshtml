@{
    ViewData["Title"] = "About Us";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />

<section class="hero-section text-center">
    <div class="container">
        <span class="badge hero-kicker mb-3">About HMS</span>
        <h1 class="display-5 mb-3">Caring for Your Health, Always</h1>
        <p class="lead mb-0">We combine compassionate care with cutting-edge technology to deliver outstanding outcomes.</p>
    </div>
</section>

<div class="container section">
    <div class="content-section mb-4">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h2 class="mb-3 text-primary">Our Story & Commitment</h2>
                <p>
                    Our mission is simple yet profound: to deliver high?quality, patient?centered healthcare with unwavering integrity and continuous innovation. We strive to be a trusted partner in your health journey, focusing on personalized care that respects your unique needs and values.
                </p>
                <p class="mb-0">
                    Every decision we make?from advanced treatments to warm, human interactions?is rooted in this mission. True healing embraces medical excellence, empathy, and understanding.
                </p>
            </div>
            <div class="col-lg-5 text-center">
                <img src="~/images/doctor-team.jpg" alt="Doctors Team" class="img-fluid shadow-sm rounded" onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=Doctors+Team';">
            </div>
        </div>
    </div>

    <!-- Care Pillars -->
    <div class="mb-4">
        <h3 class="mb-3">Our Care Pillars</h3>
        <div class="row g-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="feature-card h-100 p-3 bg-white">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-heart-pulse text-danger fs-2 me-3"></i>
                        <div>
                            <h5 class="mb-1">Patient?First</h5>
                            <p class="mb-0 text-muted">Personalized treatment plans focused on your goals and comfort.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="feature-card h-100 p-3 bg-white">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-cpu text-primary fs-2 me-3"></i>
                        <div>
                            <h5 class="mb-1">Technology?Enabled</h5>
                            <p class="mb-0 text-muted">Modern diagnostics and digital records for efficient, safe care.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="feature-card h-100 p-3 bg-white">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-shield-check text-success fs-2 me-3"></i>
                        <div>
                            <h5 class="mb-1">Quality & Safety</h5>
                            <p class="mb-0 text-muted">Strict protocols and continuous improvement at every step.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="feature-card h-100 p-3 bg-white">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-clock-history text-warning fs-2 me-3"></i>
                        <div>
                            <h5 class="mb-1">Timely Access</h5>
                            <p class="mb-0 text-muted">Convenient appointments and coordinated care across teams.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vision -->
    <div class="content-section mb-4">
        <div class="row align-items-center g-4">
            <div class="col-lg-7 order-lg-2">
                <h2 class="mb-3 text-primary">Our Vision</h2>
                <p>
                    We envision HMS as a leading healthcare institution, globally recognized for excellence in medical care, research, and education. We continuously embrace new technologies to push the boundaries of healthcare and foster a healthier community.
                </p>
                <p class="mb-0">Beyond treating illness, we promote wellness, prevent disease, and empower individuals through education.</p>
            </div>
            <div class="col-lg-5 order-lg-1 text-center">
                <img src="~/images/modern-interior.jpg" alt="Modern Hospital Interior" class="img-fluid shadow-sm rounded" onerror="this.onerror=null;this.src='https://via.placeholder.com/600x400?text=Hospital+Interior';">
            </div>
        </div>
    </div>

    <!-- Departments -->
    <div class="mb-4">
        <h3 class="mb-3">Departments We Cover</h3>
        <div class="row g-3">
            @foreach (var dept in new[]{
                ("Cardiology","bi-heart-pulse","Advanced heart care and diagnostics."),
                ("Neurology","bi-cpu","Comprehensive neuro care and rehab."),
                ("Orthopedics","bi-bandaid","Joint, bone, and sports injury care."),
                ("Pediatrics","bi-emoji-smile","Complete children?s health services."),
                ("Oncology","bi-bezier2","Integrated cancer care & therapy."),
                ("Gynecology","bi-gender-female","Women?s health and maternity.")})
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="dept-card border p-3 h-100 bg-white">
                        <div class="d-flex align-items-start">
                            <i class="bi @dept.Item2 fs-2 text-primary me-3"></i>
                            <div>
                                <h5 class="mb-1">@dept.Item1</h5>
                                <p class="mb-0 text-muted">@dept.Item3</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Care Pathway -->
    <div class="content-section mb-4">
        <h3 class="mb-3">Your Care Pathway</h3>
        <div class="timeline">
            <div class="timeline-item">
                <span class="dot"></span>
                <h5 class="mb-1">1. Book Appointment</h5>
                <p class="mb-0 text-muted">Choose your doctor and preferred time through our booking portal.</p>
            </div>
            <div class="timeline-item">
                <span class="dot"></span>
                <h5 class="mb-1">2. Consultation & Diagnosis</h5>
                <p class="mb-0 text-muted">Meet your specialist and undergo required assessments.</p>
            </div>
            <div class="timeline-item">
                <span class="dot"></span>
                <h5 class="mb-1">3. Personalized Treatment Plan</h5>
                <p class="mb-0 text-muted">A coordinated plan tailored to your needs and lifestyle.</p>
            </div>
            <div class="timeline-item">
                <span class="dot"></span>
                <h5 class="mb-1">4. Follow?up & Support</h5>
                <p class="mb-0 text-muted">Ongoing monitoring, education, and support for long?term wellbeing.</p>
            </div>
        </div>
    </div>

    <!-- FAQ -->
    <div class="content-section">
        <h3 class="mb-3">Frequently Asked Questions</h3>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="q1h">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#q1" aria-expanded="true" aria-controls="q1">
                        How do I book an appointment?
                    </button>
                </h2>
                <div id="q1" class="accordion-collapse collapse show" aria-labelledby="q1h" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">You can book online via the Patient panel or call our front desk 24/7.</div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="q2h">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q2" aria-expanded="false" aria-controls="q2">
                        Do you support cashless insurance claims?
                    </button>
                </h2>
                <div id="q2" class="accordion-collapse collapse" aria-labelledby="q2h" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">Yes, we partner with major insurers. Please bring your policy details and ID.</div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="q3h">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q3" aria-expanded="false" aria-controls="q3">
                        What are your emergency care hours?
                    </button>
                </h2>
                <div id="q3" class="accordion-collapse collapse" aria-labelledby="q3h" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">Emergency services are available 24/7 with on-call specialists.</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
}
