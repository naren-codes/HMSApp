@{
    ViewData["Title"] = "Home";
}

<section class="hero-section text-white">
    <div class="container position-relative">
        <div class="hero-content">
            <div class="hero-badge animate-float" aria-label="System status badge">
                <span class="bi bi-shield-check" aria-hidden="true"></span>
                Secure • Scalable • Smart
            </div>
            <h1 class="hero-title">Hospital Management System</h1>
            <p class="hero-text">Streamline clinical workflows, empower patients, and enable data‑driven decisions with an integrated, secure solution designed for doctors, administrators and patients.</p>
            <div class="d-flex flex-wrap gap-3 mt-3">
                <a asp-controller="Account" asp-action="PatientLogin" class="btn btn-gradient btn-lg animate-pulse" aria-label="Get started as a patient"><i class="bi bi-play-circle-fill me-1"></i>Get Started</a>
                <a href="#features" class="btn btn-outline-light-soft btn-lg" aria-label="Explore platform features"><i class="bi bi-grid me-1"></i>Explore Features</a>
            </div>

            <div class="stats-ribbon" aria-label="Platform statistics">
                <div class="stat-card" tabindex="0">
                    <div class="d-flex align-items-center gap-2 mb-1">
                        <span class="text-white-50"><i class="bi bi-person-badge fs-5"></i></span>
                        <div class="stat-value">@ViewBag.DoctorCount</div>
                    </div>
                    <div class="stat-label">Active Doctors</div>
                </div>
                <div class="stat-card" tabindex="0">
                    <div class="d-flex align-items-center gap-2 mb-1">
                        <span class="text-white-50"><i class="bi bi-people fs-5"></i></span>
                        <div class="stat-value">@ViewBag.PatientCount</div>
                    </div>
                    <div class="stat-label">Registered Patients</div>
                </div>
                <div class="stat-card" tabindex="0">
                    <div class="d-flex align-items-center gap-2 mb-1">
                        <span class="text-white-50"><i class="bi bi-calendar-week fs-5"></i></span>
                        <div class="stat-value">@ViewBag.AppointmentCount</div>
                    </div>
                    <div class="stat-label">Appointments</div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="features" class="features-section bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-8">
                <h2 class="mb-2">Key Capabilities</h2>
                <p class="text-muted mb-0">Everything you need to deliver efficient, patient‑centric care and optimize operational performance.</p>
            </div>
        </div>
        <div class="features-grid">
            <div class="feature-card" aria-label="Appointment management feature">
                <div class="feature-icon"><span class="bi bi-calendar2-check" aria-hidden="true"></span></div>
                <h3 class="feature-title">Smart Scheduling</h3>
                <p class="feature-desc">Real‑time availability, automated reminders, conflict detection and seamless booking workflows.</p>
            </div>
            <div class="feature-card" aria-label="Patient record feature">
                <div class="feature-icon"><span class="bi bi-file-medical" aria-hidden="true"></span></div>
                <h3 class="feature-title">Unified Records</h3>
                <p class="feature-desc">Centralized longitudinal patient profiles with history, visits, billing and clinical notes.</p>
            </div>
            <div class="feature-card" aria-label="Analytics feature">
                <div class="feature-icon"><span class="bi bi-graph-up" aria-hidden="true"></span></div>
                <h3 class="feature-title">Actionable Analytics</h3>
                <p class="feature-desc">Operational dashboards and metrics to improve utilization, quality and patient outcomes.</p>
            </div>
            <div class="feature-card" aria-label="Security feature">
                <div class="feature-icon"><span class="bi bi-shield-lock" aria-hidden="true"></span></div>
                <h3 class="feature-title">Enterprise Security</h3>
                <p class="feature-desc">Role‑based access, audit trails and encrypted data to safeguard sensitive information.</p>
            </div>
        </div>
    </div>
</section>

<section class="section" aria-labelledby="portalsHeading">
    <div class="container">
        <div class="text-center mb-5">
            <h2 id="portalsHeading" class="mb-2">Access Portals</h2>
            <p class="text-muted mb-0">Tailored experiences for each role in the healthcare journey.</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4 d-flex">
                <div class="card feature-card w-100">
                    <div class="feature-icon mb-3"><span class="bi bi-hospital" aria-hidden="true"></span></div>
                    <h3 class="h5 d-flex align-items-center gap-2"><i class="bi bi-stethoscope"></i>Doctor</h3>
                    <p class="text-muted mb-4">Manage appointments, review patient histories and streamline clinical workflow.</p>
                    <div class="mt-auto"><a asp-controller="Account" asp-action="DoctorLogin" class="btn btn-primary w-100" aria-label="Doctor login"><i class="bi bi-box-arrow-in-right me-1"></i>Enter Portal</a></div>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="card feature-card w-100">
                    <div class="feature-icon mb-3"><span class="bi bi-gear" aria-hidden="true"></span></div>
                    <h3 class="h5 d-flex align-items-center gap-2"><i class="bi bi-sliders"></i>Admin</h3>
                    <p class="text-muted mb-4">Configure system settings, oversee users and optimize hospital operations.</p>
                    <div class="mt-auto"><a asp-controller="Account" asp-action="AdminLogin" class="btn btn-primary w-100" aria-label="Admin login"><i class="bi bi-box-arrow-in-right me-1"></i>Enter Portal</a></div>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="card feature-card w-100">
                    <div class="feature-icon mb-3"><span class="bi bi-person-heart" aria-hidden="true"></span></div>
                    <h3 class="h5 d-flex align-items-center gap-2"><i class="bi bi-person"></i>Patient</h3>
                    <p class="text-muted mb-4">Book visits, manage your health data and stay engaged with your care team.</p>
                    <div class="mt-auto"><a asp-controller="Account" asp-action="PatientLogin" class="btn btn-primary w-100" aria-label="Patient login"><i class="bi bi-box-arrow-in-right me-1"></i>Enter Portal</a></div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta-section text-white" aria-labelledby="ctaHeading">
    <div class="shape" aria-hidden="true"></div>
    <div class="container position-relative">
        <div class="row align-items-center gy-4">
            <div class="col-lg-8">
                <h2 id="ctaHeading" class="mb-3">Ready to elevate patient care and efficiency?</h2>
                <p class="mb-0">Join a modern platform engineered to reduce administrative friction, improve outcomes and create a seamless experience for every stakeholder.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-controller="Account" asp-action="PatientLogin" class="btn btn-gradient btn-lg w-100 w-lg-auto" aria-label="Start now"><i class="bi bi-rocket-takeoff-fill me-1"></i>Start Now</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            function inViewport($el) {
                if ($el.length === 0) return false;
                const top = $el.offset().top;
                const bottom = top + $el.outerHeight();
                const viewTop = $(window).scrollTop();
                const viewBottom = viewTop + $(window).height();
                return bottom > viewTop + 40 && top < viewBottom - 40;
            }

            const $reveal = $('.feature-card, .stat-card, .feature-icon');
            $reveal.addClass('will-reveal');
            function processReveal() {
                $reveal.each(function () {
                    const $el = $(this);
                    if ($el.hasClass('reveal-in')) return;
                    if (inViewport($el)) $el.addClass('reveal-in');
                });
            }
            processReveal();
            $(window).on('scroll resize', processReveal);
        });
    </script>
    <style>
        .will-reveal { opacity: 0; transform: translateY(18px); transition: opacity .7s ease, transform .7s ease; }
        .reveal-in { opacity: 1; transform: translateY(0); }
    </style>
}}