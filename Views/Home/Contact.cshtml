@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root{
        --brand-primary:#0b3b74;   /* Navy */
        --brand-accent:#17a2b8;    /* Teal */
        --brand-muted:#6c7a91;     /* Muted text */
        --hero-text:#f5f7fb;       /* Light text */
        --section-bg:#f6f8fb;      /* Section background */
        --card-border:#e6ebf2;     /* Light border */
    }

    /* Page background */
    body { background: radial-gradient(1200px 600px at 10% -10%, #eef3fb 0%, transparent 60%), radial-gradient(1000px 500px at 110% 10%, #eef6ff 0%, transparent 60%) #ffffff; }

    /* Hero */
    .hero-section { position:relative; color:var(--hero-text); padding:100px 0; margin-bottom:0; overflow:hidden; }
    .hero-section::before{ content:""; position:absolute; inset:0; background:
        linear-gradient(180deg, rgba(11,59,116,.88), rgba(23,162,184,.75)),
        url('https://source.unsplash.com/1600x900/?healthcare,hospital');
        background-size:cover; background-position:center; filter:contrast(105%) saturate(105%);
        z-index:-1; }
    .hero-kicker{ background:rgba(255,255,255,.9); color:var(--brand-primary) !important; }
    .hero-section h1{ font-weight:1000; letter-spacing:.2px;text-decoration:underline }
    .hero-section .lead{ color:#fdfefe; text-shadow:0 1px 1px rgba(0,0,0,.25); font-weight:500; }

    /* Breadcrumbs */
    .breadcrumb-wrap { background:var(--section-bg); border-bottom:1px solid var(--card-border); }

    /* Sections */
    .content-section { background:#fff; padding:40px; border-radius:16px; border:1px solid var(--card-border); box-shadow:0 10px 30px rgba(11,59,116,.06); }
    .content-section h3{ position:relative; }
    .content-section h3::after{ content:""; display:block; width:56px; height:4px; background:linear-gradient(90deg, var(--brand-primary), var(--brand-accent)); border-radius:2px; margin-top:8px; }

    /* Contact info */
    .contact-info-item { display:flex; align-items:flex-start; gap:12px; margin-bottom:16px; }
    .contact-info-item .icon-badge{ width:42px; height:42px; border-radius:50%; display:inline-grid; place-items:center; background:linear-gradient(145deg,#f2f6fd,#e8eef9); border:1px solid var(--card-border); color:var(--brand-primary); }
    .contact-info-item i { font-size:1.1rem; }
    .contact-info-item h5{ margin-bottom:.25rem; }
    .contact-info-item p, .contact-info-item a{ color:var(--brand-muted); }

    /* Form */
    .form-control{ border-radius:10px; border:1px solid var(--card-border); }
    .form-control:focus{ border-color:var(--brand-accent); box-shadow:0 0 0 .25rem rgba(23,162,184,.15); }
    .btn-primary{ background:linear-gradient(180deg, var(--brand-accent), #1294a7); border:0; box-shadow:0 6px 16px rgba(23,162,184,.25); }
    .btn-primary:hover{ filter:brightness(.95); }

    /* CTA strip */
    .cta-strip{ background:linear-gradient(90deg, rgba(11,59,116,.06), rgba(23,162,184,.06)); border:1px dashed var(--card-border); border-radius:12px; padding:18px 20px; }
</style>

<section class="hero-section text-center">
    <div class="container">
        <span class="badge hero-kicker mb-3">Contact HMS</span>
        <h1 class="display-5 mb-2">Get In Touch With Us</h1>
        <p class="lead mb-0">We're here to answer any questions you may have and provide the support you need.</p>
    </div>
</section>


<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="content-section h-100">
                <h3>Reach Out to Us</h3>
                <p>Feel free to connect with us through the following channels:</p>

                <div class="contact-info-item">
                    <span class="icon-badge"><i class="bi bi-geo-alt-fill"></i></span>
                    <div>
                        <h5 class="mb-1">Hospital Address</h5>
                        <p class="mb-0">HMS<br/>Gandhi Nagar<br/>Coimbatore, Tamil Nadu, CBE-641035</p>
                    </div>
                </div>

                <div class="contact-info-item">
                    <span class="icon-badge"><i class="bi bi-telephone-fill"></i></span>
                    <div>
                        <h5 class="mb-1">Phone Numbers</h5>
                        <p class="mb-1">General Enquiries: <a href="tel:+919876543210" class="text-decoration-none">+91-9876543210</a></p>
                        <p class="mb-0">Emergency Line: <a href="tel:+918765432109" class="text-decoration-none">+91-8765432109</a></p>
                    </div>
                </div>

                <div class="contact-info-item">
                    <span class="icon-badge"><i class="bi bi-envelope-fill"></i></span>
                    <div>
                        <h5 class="mb-1">Email Addresses</h5>
                        <p class="mb-1">Support: <a href="mailto:support@hms.com" class="text-decoration-none">support@hms.com</a></p>
                        <p class="mb-0">Feedback: <a href="mailto:feedback@hms.com" class="text-decoration-none">feedback@hms.com</a></p>
                    </div>
                </div>

                <div class="mt-4">
                    <h5>Find Us on Map</h5>
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31329.585566157984!2d76.92461761839871!3d11.023751504969336!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba858e8f255ab59%3A0xfc7f5ba2980c0e3b!2sJawahar%20Nagar%2C%20Saibaba%20Colony%2C%20Coimbatore%2C%20Tamil%20Nadu%20641011!5e0!3m2!1sen!2sin!4v1753725365104!5m2!1sen!2sin" style="border:0;" allowfullscreen loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>

                <div class="cta-strip mt-4 d-flex align-items-center justify-content-between flex-wrap">
                    <div class="me-3 mb-2 mb-sm-0">
                        <strong>Need urgent assistance?</strong>
                        <div class="text-muted small">Our emergency team is available 24/7.</div>
                    </div>
                    <a href="tel:+918765432109" class="btn btn-primary">Call Emergency</a>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="content-section h-100">
                <h3>Send Us a Message</h3>
                <p>Have a question or need assistance? Fill out the form below:</p>
                <form id="contactForm" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" required>
                        <div class="invalid-feedback">Please enter your name.</div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required>
                        <div class="invalid-feedback">Please enter a valid email.</div>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject (Optional)</label>
                        <input type="text" class="form-control" id="subject">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="5" required></textarea>
                        <div class="invalid-feedback">Please enter your message.</div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
                <div id="formAlert" class="alert alert-success mt-3 d-none text-center">
                    <i class="bi bi-check-circle-fill me-2"></i>Message sent successfully! We'll get back to you soon.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script>
    $(function(){
        $('#contactForm').on('submit', function(e){
            e.preventDefault();

            const $form = $(this);
            let valid = true;

            // Simple client-side validation using Bootstrap styles
            ['#name', '#email', '#message'].forEach(function(sel){
                const $el = $(sel);
                if(!$el.val()){
                    $el.addClass('is-invalid');
                    valid = false;
                } else {
                    $el.removeClass('is-invalid');
                }
            });

            if(!valid) return;

            $('#formAlert').removeClass('d-none');
            $form[0].reset();
            setTimeout(function(){ $('#formAlert').addClass('d-none'); }, 5000);
        });

        // Remove invalid state on input
        $('#contactForm').on('input', 'input, textarea', function(){
            $(this).removeClass('is-invalid');
        });
    });
</script>
}
