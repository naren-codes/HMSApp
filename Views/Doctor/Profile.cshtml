@model HMSApp.Models.Doctor
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-badge"></i> Doctor Profile</h2>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8">
                    <h4>Professional Information</h4>
                    <hr>
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Specialization</dt>
                        <dd class="col-sm-8">@Model.Specialization</dd>


                        <dt class="col-sm-4">Contact Number</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>

                        <dt class="col-sm-4">Availability Schedule</dt>
                        <dd class="col-sm-8">@Model.AvailabilitySchedule</dd>
                    </dl>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="DoctorDashboard" asp-controller="Doctor" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to Dashboard </a>
            </div>
        </div>
    </div>
</div>

@* This ensures the Bootstrap icons are available on this page *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
