@model HMSApp.Models.Doctor
@{
    ViewData["Title"] = "Doctor Profile";
}

<style>
    /* Optional: Some light styling for the profile page */
    .profile-card {
        max-width: 700px;
        margin: 3rem auto;
    }

    .profile-icon {
        font-size: 6rem;
        color: #0d6efd; /* Bootstrap primary color */
    }
</style>

<div class="container">
    <div class="card profile-card shadow-sm">
        <div class="card-header bg-light text-center py-4">
            <i class="bi bi-person-circle profile-icon"></i>
            <h2 class="mt-3 mb-0">@Model.Name</h2>
            <p class="text-muted mb-0">@Model.Specialization</p>
        </div>
        <div class="card-body p-4">
            <h4 class="card-title">Profile Details</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-5">Name:</dt>
                <dd class="col-sm-7">@Model.Name</dd>

                <dt class="col-sm-5">Specialization:</dt>
                <dd class="col-sm-7">@Model.Specialization</dd>

                <dt class="col-sm-5">Contact Number:</dt>
                <dd class="col-sm-7">@Model.ContactNumber</dd>

                <dt class="col-sm-5">Availability Schedule:</dt>
                <dd class="col-sm-7">@Model.AvailabilitySchedule</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="DoctorDashboard" asp-controller="Doctor" class="btn btn-primary">
                    <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@* Make sure you have Bootstrap Icons linked in your main _Layout.cshtml file for the icons to appear *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">