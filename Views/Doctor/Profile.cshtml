@model HMSApp.Models.Doctor
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Doctor Profile</h2>
        </div>
        <div class="card-body p-4">

            <form asp-action="UpdateProfile" method="post">
                @* These hidden fields are crucial for identifying the doctor and preserving data *@
                <input type="hidden" asp-for="DoctorId" />
                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="Password" />
                <input type="hidden" asp-for="Role" />

                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <h4 class="mb-3">Professional Information</h4>
                        <hr class="mb-4">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialization" class="form-label">Specialization</label>
                            <input asp-for="Specialization" class="form-control" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber" class="form-label">Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AvailabilitySchedule" class="form-label">Availability Schedule</label>
                            <textarea asp-for="AvailabilitySchedule" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="AvailabilitySchedule" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                    <a asp-action="DoctorDashboard" asp-controller="Doctor" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
