@model HMSApp.Models.Doctor
@{
    ViewData["Title"] = "Doctor Details";
}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white d-flex align-items-center">
                    <h4 class="m-0"><i class="bi bi-person-badge me-2"></i>Doctor Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Specialization</dt>
                        <dd class="col-sm-8">@Model.Specialization</dd>
                        <dt class="col-sm-4">Contact</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.Username</dd>
                        <dt class="col-sm-4">Availability</dt>
                        <dd class="col-sm-8">@Model.AvailabilitySchedule</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Back</a>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.DoctorId" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model?.DoctorId" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
