@model HMSApp.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <h4 class="m-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <p class="fw-semibold">Are you sure you want to delete this doctor?</p>
                    <dl class="row mb-0 small">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Specialization</dt>
                        <dd class="col-sm-8">@Model.Specialization</dd>
                        <dt class="col-sm-4">Contact</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.Username</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Cancel</a>
                    <form asp-action="Delete" class="m-0">
                        <input type="hidden" asp-for="DoctorId" />
                        <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
