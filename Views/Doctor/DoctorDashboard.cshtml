@model IEnumerable<HMSApp.Models.Appointment>
@{
    var doctorName = ViewData["DoctorName"] as string;
    if (!string.IsNullOrEmpty(doctorName))
    {
        doctorName = char.ToUpper(doctorName[0]) + (doctorName.Length > 1 ? doctorName.Substring(1) : string.Empty);
    }
    if (string.IsNullOrEmpty(doctorName))
    {
        Context.Response.Redirect("/Account/DoctorLogin");
    }
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "_Layout";
    int total = (int)(ViewData["TotalAppointments"] ?? 0);
    int upcoming = (int)(ViewData["UpcomingAppointments"] ?? 0);
    int pending = (int)(ViewData["PendingAppointments"] ?? 0);
    int today = (int)(ViewData["TodayAppointments"] ?? 0);
    var patientNames = Model?.Where(a => !string.IsNullOrWhiteSpace(a.PatientName))
        .Select(a => a.PatientName!)
        .Distinct()
        .OrderBy(patient => patient)
        .ToList() ?? new List<string>();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/doctor-dashboard.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="dd-header-bar mb-4 p-3 rounded-3">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-heart-pulse-fill me-2"></i>Doctor Dashboard</h2>
                <div class="small opacity-75">Welcome back, <span class="doctor-name-inline fw-semibold">Dr. @doctorName</span></div>
            </div>
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <div class="nav-quick d-flex gap-2 flex-wrap me-2">
                    <a asp-controller="Doctor" asp-action="Appointment" class="btn btn-sm btn-light px-3"><i class="bi bi-calendar-event me-1"></i>Appointments</a>
                    <a class="btn btn-sm btn-light px-3" href="#"><i class="bi bi-capsule-pill me-1"></i>New Prescriptions</a>
                    <a asp-controller="Doctor" asp-action="Profile" class="btn btn-sm btn-light px-3"><i class="bi bi-person-fill"></i> Profile</a>
                </div>
                <a href="/Account/Logout" class="btn btn-sm btn-outline-danger" id="logoutBtn"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-primary-grad)">
                <div class="mini-label mb-1 text-uppercase small">Total Appointments</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="totalAppointments">@total</div>
                    <div class="icon-bg"><i class="bi bi-journal-medical"></i></div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-green-grad)">
                <div class="mini-label mb-1 text-uppercase small">Upcoming</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="upcomingAppointments">@upcoming</div>
                    <div class="icon-bg"><i class="bi bi-calendar2-week"></i></div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-orange-grad)">
                <div class="mini-label mb-1 text-uppercase small">Pending</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="pendingActions">@pending</div>
                    <div class="icon-bg"><i class="bi bi-hourglass-split"></i></div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-accent-grad)">
                <div class="mini-label mb-1 text-uppercase small">Today</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="todayCount">@today</div>
                    <div class="icon-bg"><i class="bi bi-activity"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div id="appointments" class="card dd-panel h-100">
                <div class="card-header pb-0">
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                        <h5 class="card-title mb-0"><i class="bi bi-calendar2-range me-2 text-primary"></i>Appointments</h5>
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary active" type="button">Upcoming</button>
                            <button class="btn btn-outline-secondary" type="button">All</button>
                            <button class="btn btn-outline-secondary" type="button">Completed</button>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-3">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom align-middle mb-0" id="appointmentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Patient</th>
                                    <th>Status</th>
                                    <th>Reason</th>
                                    <th class="text-center" style="width:160px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr class="text-muted">
                                        <td colspan="6" class="text-center py-4">
                                            <div class="placeholder-box">No appointments available.</div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var a in Model)
                                    {
                                        var statusClass = a.Status == "Completed" ? "success" : a.Status == "Cancelled" ? "danger" : "warning";
                                        <tr data-appointment-id="@a.AppointmentId" data-patient-name="@a.PatientName" data-patient-id="@a.PatientId">
                                            <td>@a.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                            <td>@a.TimeSlot</td>
                                            <td>@a.PatientName</td>
                                            <td><span class="badge text-bg-@statusClass">@a.Status</span></td>
                                            <td class="small">@a.PatientDescription</td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-success btn-complete" title="Mark Completed"><i class="bi bi-check2"></i></button>
                                                    <button type="button" class="btn btn-outline-danger" title="Cancel"><i class="bi bi-x"></i></button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <a asp-controller="Doctor" asp-action="Profile" style="text-decoration: none; color: inherit; display: block;">
                <div id="profile" class="profile-block h-100 d-flex flex-column">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="profile-avatar"><i class="bi bi-person"></i></div>
                        <div class="flex-fill">
                            <div class="fw-semibold fs-5 mb-0" id="doctorName">Dr. @doctorName</div>
                            <div class="opacity-75 small" id="doctorSpecialization">@ViewData["DoctorSpecialization"]</div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <span class="badge bg-success availability-badge" id="availabilityBadge"><i class="bi bi-check-circle me-1"></i>Available</span>
                    </div>
                    <div class="small opacity-75">Contact: <span id="doctorContact">@ViewData["DoctorContact"]</span></div>
                    <div class="small opacity-75 mb-3">Schedule: <span id="doctorSchedule">@ViewData["DoctorSchedule"]</span></div>
                    <div class="mt-auto pt-3 border-top small opacity-75">Last login: <span id="lastLogin">--</span></div>
                </div>
            </a>
        </div>
    </div>

    <div id="new-prescription" class="card dd-panel mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><i class="bi bi-file-medical me-2 text-primary"></i>New Prescription</h5>
            <div class="small opacity-75">Create and manage patient prescriptions</div>
        </div>
        <div class="card-body">
            <form id="prescriptionForm" autocomplete="off" class="needs-validation" novalidate>
                <div class="row g-3 align-items-start">
                    <div class="col-md-4 col-lg-3">
                        <label class="form-label small fw-semibold">Patient Name</label>
                        <input class="form-control form-control-sm" id="prescriptionPatientName" name="PatientName" list="patientNameOptions" placeholder="Start typing name" required />
                        <datalist id="patientNameOptions">
                            @foreach (var patient in patientNames)
                            {
                                <option value="@patient"></option>
                            }
                        </datalist>
                        <div class="invalid-feedback small">Patient name required.</div>
                    </div>
                    <div class="col-md-8 col-lg-9">
                        <label class="form-label small fw-semibold">Medication Details</label>
                        <input class="form-control form-control-sm" name="MedicationDetails" required />
                        <div class="invalid-feedback small">Medication details required.</div>
                    </div>
                    <div class="col-12">
                        <label class="form-label small fw-semibold">Notes</label>
                        <textarea class="form-control form-control-sm" name="Notes" rows="3" placeholder="Add dosage instructions, duration, etc."></textarea>
                    </div>
                    <div class="col-12 d-flex gap-2 flex-wrap pt-2">
                        <button type="submit" class="btn btn-primary btn-sm" id="savePrescriptionBtn"><i class="bi bi-save me-1"></i>Save</button>
                        <button type="reset" class="btn btn-outline-secondary btn-sm"><i class="bi bi-eraser me-1"></i>Clear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="floating-action">
        <button class="btn btn-primary" title="New Prescription" onclick="document.getElementById('new-prescription').scrollIntoView({behavior:'smooth'})"><i class="bi bi-plus-lg"></i></button>
    </div>
</div>

<div class="modal fade" id="billModal" tabindex="-1" aria-labelledby="billModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="billModalLabel">Create Bill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="billForm">
                    <input type="hidden" id="billAppointmentId" />
                    <div class="mb-3">
                        <label class="form-label">Patient Name</label>
                        <input type="text" class="form-control" id="billPatientName" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bill Date</label>
                        <input type="text" class="form-control" id="billDate" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prescription</label>
                        <textarea class="form-control" id="billPrescription" rows="3" placeholder="Enter prescription"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Total Amount</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="billTotalAmount" placeholder="0.00" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Status</label>
                        <input type="text" class="form-control" value="Unpaid" readonly />
                    </div>
                </form>
                <div class="alert alert-danger d-none" id="billError"></div>
                <div class="alert alert-success d-none" id="billSuccess">Bill saved.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBillBtn">Save Bill</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(function(){
        var billModalEl = document.getElementById('billModal');
        var billModal = new bootstrap.Modal(billModalEl);
        function openBillModal($row){
            $('#billAppointmentId').val($row.data('appointment-id'));
            $('#billPatientName').val($row.data('patient-name'));
            $('#billDate').val(new Date().toISOString().split('T')[0]);
            $('#billPrescription').val('');
            $('#billTotalAmount').val('');
            $('#billError').addClass('d-none');
            $('#billSuccess').addClass('d-none');
            billModal.show();
        }
        $('.btn-complete').on('click', function(){
            openBillModal($(this).closest('tr'));
        });
        $('#saveBillBtn').on('click', function(){
            var apptId = parseInt($('#billAppointmentId').val());
            var prescription = $('#billPrescription').val().trim();
            var totalAmount = parseFloat($('#billTotalAmount').val() || '0');
            $.ajax({
                url:'/Doctor/CompleteAppointmentAndCreateBill',
                method:'POST',
                contentType:'application/json',
                data: JSON.stringify({ appointmentId: apptId, prescription: prescription, totalAmount: totalAmount }),
                success:function(data){
                    if(data.success){
                        $('#billSuccess').removeClass('d-none');
                        var $row = $('tr[data-appointment-id="'+apptId+'"]');
                        var $badge = $row.find('td:nth-child(4) span');
                        $badge.text('Completed').removeClass().addClass('badge text-bg-success');
                        setTimeout(function(){ billModal.hide(); },800);
                    } else {
                        $('#billError').text('Unexpected response').removeClass('d-none');
                    }
                },
                error:function(xhr){
                    var msg = 'Save failed';
                    if(xhr.responseText){ msg += ': ' + xhr.responseText; }
                    $('#billError').text(msg).removeClass('d-none');
                }
            });
        });
    });
</script>