@{
    var doctorUsername = Context.Session.GetString("doctorUsername");
    if (string.IsNullOrEmpty(doctorUsername))
    {
        Context.Response.Redirect("/Account/DoctorLogin");
    }
    ViewData["DoctorUsername"] = doctorUsername;
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/doctor-dashboard.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="dd-header-bar mb-4 gradient-border p-3 rounded-3">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-heart-pulse-fill me-2"></i>Doctor Dashboard</h2>
                <div class="small opacity-75">Welcome back, <span class="doctor-name-inline fw-semibold">Dr. @ViewData["DoctorUsername"]</span></div>
            </div>
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <div class="nav-quick d-flex gap-2 flex-wrap me-2">
                    <a class="btn btn-sm btn-light px-3" href="#appointments"><i class="bi bi-calendar-event me-1"></i>Appointments</a>
                    <a class="btn btn-sm btn-light px-3" href="#new-prescription"><i class="bi bi-file-medical me-1"></i>New Prescription</a>
                    <a class="btn btn-sm btn-light px-3" href="#profile"><i class="bi bi-person-badge me-1"></i>Profile</a>
                </div>
                <a href="/Account/DoctorLogin" class="btn btn-sm btn-outline-danger" id="logoutBtn"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>

            </div>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-primary-grad)">
                <div class="mini-label mb-1 text-uppercase small">Total Appointments</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="totalAppointments">--</div>
                    <div class="icon-bg"><i class="bi bi-journal-medical"></i></div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-green-grad)">
                <div class="mini-label mb-1 text-uppercase small">Upcoming</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="upcomingAppointments">--</div>
                    <div class="icon-bg"><i class="bi bi-calendar2-week"></i></div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-orange-grad)">
                <div class="mini-label mb-1 text-uppercase small">Pending Actions</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="pendingActions">--</div>
                    <div class="icon-bg"><i class="bi bi-hourglass-split"></i></div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card p-3 h-100" style="background:var(--dd-accent-grad)">
                <div class="mini-label mb-1 text-uppercase small">Today</div>
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-value" id="todayCount">--</div>
                    <div class="icon-bg"><i class="bi bi-activity"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments & Profile -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div id="appointments" class="card dd-panel gradient-border h-100">
                <div class="card-header pb-0">
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                        <h5 class="card-title mb-0"><i class="bi bi-calendar2-range me-2 text-primary"></i>Appointments</h5>
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary active" type="button">Upcoming</button>
                            <button class="btn btn-outline-secondary" type="button">All</button>
                            <button class="btn btn-outline-secondary" type="button">Completed</button>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-3">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom align-middle mb-0" id="appointmentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Time</th>
                                    <th>Patient</th>
                                    <th>Patient Id</th>
                                    <th>Status</th>
                                    <th>Reason</th>
                                    <th class="text-center" style="width:160px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-muted">
                                    <td colspan="6" class="text-center py-4">
                                        <div class="placeholder-box">
                                            No appointments available.
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div id="profile" class="profile-block h-100 d-flex flex-column">
                <div class="profile-overlay-shape"></div>
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="profile-avatar"><i class="bi bi-person"></i></div>
                    <div class="flex-fill">
                        <div class="fw-semibold fs-5 mb-0" id="doctorName">Dr. @ViewData["DoctorUsername"]</div>
                        <div class="opacity-75 small" id="doctorSpecialization">Specialization</div>
                    </div>
                </div>
                <div class="mb-2">
                    <span class="badge bg-success availability-badge" id="availabilityBadge"><i class="bi bi-check-circle me-1"></i>Available</span>
                </div>
                <div class="small opacity-75">Contact: <span id="doctorContact">--</span></div>
                <div class="small opacity-75 mb-3">Schedule: <span id="doctorSchedule">--</span></div>
                <div class="mt-auto pt-3 border-top small opacity-75">Last login: <span id="lastLogin">--</span></div>
            </div>
        </div>
    </div>

    <!-- Full-width New Prescription section -->
    <div id="new-prescription" class="card dd-panel mb-4">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0"><i class="bi bi-file-medical me-2 text-primary"></i>New Prescription</h5>
            <div class="small opacity-75">Create and manage patient prescriptions</div>
        </div>
        <div class="card-body">
            <form id="prescriptionForm" autocomplete="off" class="needs-validation" novalidate>
                <div class="row g-3 align-items-start">
                    <div class="col-md-4 col-lg-3">
                        <label class="form-label small fw-semibold">Patient Id</label>
                        <input class="form-control form-control-sm" id="prescriptionPatientId" name="PatientId" placeholder="Select from appointments" required />
                        <div class="invalid-feedback small">Patient Id required.</div>
                    </div>
                    <div class="col-md-8 col-lg-9">
                        <label class="form-label small fw-semibold">Medication Details</label>
                        <input class="form-control form-control-sm" name="MedicationDetails" required />
                        <div class="invalid-feedback small">Medication details required.</div>
                    </div>
                    <div class="col-12">
                        <label class="form-label small fw-semibold">Notes</label>
                        <textarea class="form-control form-control-sm" name="Notes" rows="3" placeholder="Add dosage instructions, duration, etc."></textarea>
                    </div>
                    <div class="col-12 d-flex gap-2 flex-wrap pt-2">
                        <button type="submit" class="btn btn-primary btn-sm" id="savePrescriptionBtn"><i class="bi bi-save me-1"></i>Save</button>
                        <button type="reset" class="btn btn-outline-secondary btn-sm"><i class="bi bi-eraser me-1"></i>Clear</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="floating-action">
        <button class="btn btn-primary" title="New Prescription" onclick="document.getElementById('new-prescription').scrollIntoView({behavior:'smooth'})"><i class="bi bi-plus-lg"></i></button>
    </div>
</div>

@section Scripts {
    <script>
        $(function(){
            function clearStoredCredentials(){
                try {
                    localStorage.removeItem('doctorUsername');
                    localStorage.removeItem('doctorToken');
                } catch(e) { }
            }
            $('#logoutBtn').on('click', clearStoredCredentials);
            $(window).on('beforeunload', clearStoredCredentials);
        });
    </script>
}