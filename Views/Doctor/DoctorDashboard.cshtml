@{
    var doctorUsername = Context.Session.GetString("doctorUsername");
    if (string.IsNullOrEmpty(doctorUsername))
    {
        Context.Response.Redirect("/Account/DoctorLogin");
    }
    ViewData["DoctorUsername"] = doctorUsername;
    ViewData["Title"] = "Doctor Dashboard";
    Layout = "_Layout"; 
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/doctor-dashboard.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="dd-header-bar mb-4">
        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h2 class="fw-bold mb-1"><i class="bi bi-heart-pulse-fill me-2"></i>Doctor Dashboard</h2>
                <div class="small opacity-75">Welcome, <span class="doctor-name-inline">Dr. @ViewData["DoctorUsername"]</span>.</div>
            </div>
            <div class="nav-quick">
                <a class="btn btn-sm btn-light px-3" href="#appointments"><i class="bi bi-calendar-event me-1"></i>Appointments</a>
                <a class="btn btn-sm btn-light px-3" href="#prescriptions"><i class="bi bi-capsule-pill me-1"></i>Prescriptions</a>
                <a class="btn btn-sm btn-light px-3" href="#profile"><i class="bi bi-person-badge me-1"></i>Profile</a>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card p-3" style="background:var(--dd-primary-grad)">
                <div class="mini-label mb-1">Total Appointments</div>
                <div class="stat-value" id="totalAppointments">--</div>
                <div class="icon-bg"><i class="bi bi-journal-medical"></i></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card p-3" style="background:var(--dd-green-grad)">
                <div class="mini-label mb-1">Upcoming</div>
                <div class="stat-value" id="upcomingAppointments">--</div>
                <div class="icon-bg"><i class="bi bi-calendar2-week"></i></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card p-3" style="background:var(--dd-orange-grad)">
                <div class="mini-label mb-1">Pending Actions</div>
                <div class="stat-value" id="pendingActions">--</div>
                <div class="icon-bg"><i class="bi bi-hourglass-split"></i></div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card p-3" style="background:var(--dd-accent-grad)">
                <div class="mini-label mb-1">Prescriptions</div>
                <div class="stat-value" id="prescriptionCount">--</div>
                <div class="icon-bg"><i class="bi bi-capsule"></i></div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div id="appointments" class="card dd-panel mb-4 gradient-border">
                <div class="card-header pb-0">
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                        <h5 class="card-title mb-0"><i class="bi bi-calendar2-range me-2 text-primary"></i>Today's & Upcoming Appointments</h5>
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary active" type="button">Upcoming</button>
                            <button class="btn btn-outline-secondary" type="button">All</button>
                            <button class="btn btn-outline-secondary" type="button">Completed</button>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-3">
                    <div class="table-responsive">
                        <table class="table table-hover table-custom align-middle mb-0" id="appointmentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Time</th>
                                    <th>Patient Name</th>
                                    <th>Patient Id</th>
                                    <th>Status</th>
                                    <th>Reason</th>
                                    <th class="text-center" style="width:170px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-muted">
                                    <td colspan="6" class="text-center py-4">
                                        <div class="placeholder-box">
                                            No appointments available.
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="prescriptions" class="card dd-panel mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="bi bi-file-medical me-2 text-primary"></i>New Prescription</h5>
                </div>
                <div class="card-body">
                    <form id="prescriptionForm" autocomplete="off">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label small fw-semibold">Patient Id</label>
                                <input class="form-control form-control-sm" id="prescriptionPatientId" name="PatientId" placeholder="Select from appointments" />
                            </div>
                            <div class="col-md-8">
                                <label class="form-label small fw-semibold">Medication Details</label>
                                <input class="form-control form-control-sm" name="MedicationDetails" />
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-semibold">Notes</label>
                                <textarea class="form-control form-control-sm" name="Notes" rows="2"></textarea>
                            </div>
                            <div class="col-12 d-flex gap-2 flex-wrap">
                                <button type="button" class="btn btn-primary btn-sm" disabled><i class="bi bi-save me-1"></i>Save</button>
                                <button type="reset" class="btn btn-outline-secondary btn-sm"><i class="bi bi-eraser me-1"></i>Clear</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card dd-panel mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="bi bi-collection me-2 text-primary"></i>Recent Prescriptions</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small" id="recentPrescriptions">
                        <li class="list-group-item text-muted">None.</li>
                    </ul>
                </div>
            </div>

            <div class="card dd-panel">
                <div class="card-header pb-0">
                    <h5 class="card-title mb-0"><i class="bi bi-activity me-2 text-primary"></i>Recent Activity</h5>
                </div>
                <div class="card-body">
                    <ul class="timeline small mb-0">
                        <li class="timeline-item text-muted">No activity.</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div id="profile" class="profile-block mb-4">
                <div class="profile-overlay-shape"></div>
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="profile-avatar"><i class="bi bi-person"></i></div>
                    <div>
                        <div class="fw-semibold fs-5" id="doctorName">Dr. @ViewData["DoctorUsername"]</div>
                        <div class="opacity-75 small" id="doctorSpecialization">Specialization</div>
                    </div>
                </div>
                <div class="mb-2">
                    <span class="badge bg-success availability-badge" id="availabilityBadge"><i class="bi bi-check-circle me-1"></i>Available</span>
                </div>
                <div class="small opacity-75">Contact: <span id="doctorContact">--</span></div>
                <div class="small opacity-75 mb-3">Schedule: <span id="doctorSchedule">--</span></div>
            </div>

            <div class="card dd-panel mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="bi bi-bell me-2 text-primary"></i>Notifications</h5>
                    <span class="badge rounded-pill text-bg-primary">0</span>
                </div>
                <div class="card-body pt-3">
                    <ul class="list-group small" id="notificationsList">
                        <li class="list-group-item text-muted">None.</li>
                    </ul>
                </div>
            </div>

            <div class="card dd-panel mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="bi bi-toggle-on me-2 text-primary"></i>Availability</h5>
                    <small class="text-muted">Realtime</small>
                </div>
                <div class="card-body">
                    <div class="pill-switch form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="availabilitySwitch" checked>
                        <label class="form-check-label" for="availabilitySwitch">Available for bookings</label>
                    </div>
                    <div class="placeholder-box py-3">No state persisted.</div>
                </div>
            </div>

            <div class="card dd-panel">
                <div class="card-header pb-0">
                    <h5 class="card-title mb-0"><i class="bi bi-lightbulb me-2 text-warning"></i>Quick Tips</h5>
                </div>
                <div class="card-body small">
                    <ul class="mb-0 ps-3">
                        <li>Wire real appointment data.</li>
                        <li>Bind prescription save.</li>
                        <li>Implement availability update.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="floating-action">
    <button class="btn btn-primary" title="New Prescription"><i class="bi bi-plus-lg"></i></button>
</div>

@section Scripts { }