@model IEnumerable<HMSApp.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No doctors found.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Specialization)</th>
                <th>@Html.DisplayNameFor(model => model.First().ContactNumber)</th>
                <th>@Html.DisplayNameFor(model => model.First().AvailabilitySchedule)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.AvailabilitySchedule)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DoctorId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DoctorId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DoctorId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
