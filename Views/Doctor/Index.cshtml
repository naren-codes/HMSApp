@model IEnumerable<HMSApp.Models.Doctor>
@{
    ViewData["Title"] = "Doctor List";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Doctor List</h2>
    <a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Doctor">Add New Doctor</a>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Specialization</th>
                <th>Contact</th>
                <th>Availability Schedule</th>
                <th>Actions</th>
            </tr>
        </thead>
        @if (Model != null && Model.Any())
        {
            <tbody>
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.Name</td>
                        <td>@doctor.Specialization</td>
                        <td>@doctor.ContactNumber</td>
                        <td>@doctor.AvailabilitySchedule</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="/Doctor/Details/@doctor.DoctorId">Details</a>
                            <a class="btn btn-warning btn-sm" href="/Doctor/Edit/@doctor.DoctorId">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Doctor/Delete/@doctor.DoctorId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="5">No doctors found.</td>
                </tr>
            </tbody>
        }
    </table>
</div>